<header class="header-mobile d-block d-lg-none">
    <div class="header-mobile__bar">
        <div class="container-fluid">
            <div class="header-mobile-inner">
                <a class="logo" href="~/AdminUI/index.html">
                    <img src="~/AdminUI/images/icon/logo.png" alt="CoolAdmin" />
                </a>
                <button class="hamburger hamburger--slider" type="button">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <nav class="navbar-mobile">
        <div class="container-fluid">
            <ul class="navbar-mobile__list list-unstyled">
                <li>
                    <a asp-controller="Product" asp-action="Index" asp-area="admin">
                        <i class="fas fa-chart-bar"></i>Products
                    </a>
                </li>
                <li>
                    <a asp-controller="Product" asp-action="Create" asp-area="admin">
                        <i class="fas fa-chart-bar"></i>Add Product
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="User" asp-action="Index" asp-area="admin">
                            <i class="fas fa-chart-bar"></i>Users
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Log" asp-action="Index" asp-area="admin">
                            <i class="fas fa-chart-bar"></i>Application Logs
                        </a>
                    </li>
                }
            </ul>
        </div>
    </nav>
</header>