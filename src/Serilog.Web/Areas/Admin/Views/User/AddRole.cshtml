@using Microsoft.AspNetCore.Identity
@using Serilog.Core.Entities
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<title>Edit Roles</title>

@model List<string>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">Overview</h2>
                        <button class="au-btn au-btn-icon au-btn--blue">
                            <i class="zmdi zmdi-plus"></i>Users
                        </button>
                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <form method="post" asp-action="AddRole" asp-area="admin" asp-controller="user">
                        <input hidden name="userId" value="@ViewBag.UserId" />
                        @foreach (var role in (List<AppRole>)ViewBag.Roles)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="roles" value="@role.Name" id="@role.Name" @(Model.Contains(role.Name) ? "checked" : "") />
                                <label class="form-check-label" for="@role.Name">
                                    @role.Name
                                </label>
                            </div>
                        }
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
