@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using SerilogExample.Core.Entities
<title>Admin | Add Product</title>

@model Product

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">Product</div>
                        <div class="card-body">
                            <div class="card-title">
                                <h3 class="text-center title-2">New Product</h3>
                            </div>
                            <hr>
                            <form method="post" asp-action="Create" asp-area="admin" asp-controller="Product" novalidate="novalidate">
                                <div class="form-group">
                                    <label for="cc-payment" class="control-label mb-1"> Product Name</label>
                                    <input id="cc-pament" asp-for="Name" type="text" class="form-control" aria-required="true" aria-invalid="false">
                                </div>


                                <div class="form-group">
                                    <label for="cc-payment" class="control-label mb-1">Category</label>
                                    <input id="cc-pament" asp-for="Category" type="text" class="form-control" aria-required="true" aria-invalid="false">
                                </div>


                                <div class="form-group">
                                    <label for="cc-payment" class="control-label mb-1">Image Url</label>
                                    <input id="cc-pament" asp-for="Image" type="text" class="form-control" aria-required="true" aria-invalid="false">
                                </div>
                                <div class="form-group">
                                    <label for="cc-payment" class="control-label mb-1">Description</label>
                                    <textarea id="cc-pament" asp-for="Description" type="text" class="form-control" aria-required="true" aria-invalid="false"></textarea>
                                </div>
                                <div>
                                    <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        Create
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

